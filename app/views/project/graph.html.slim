= render :partial => 'common/header'

#wrapper
  .project_graph

    = link_to 'ダッシュボードへ戻る', '/super/dashboard', :class => 'btn btn-default btn-prev'

    ul
      li
        .title デイリーPV
        canvas#daily-graph
      li
        .title ウィークリーPV
        canvas#weekly-graph
      li
        .title マンスリーPV
        canvas#monthly-graph


= javascript_include_tag 'Chart.min'
