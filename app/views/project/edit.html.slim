#wrapper

  == showFlashMessages

  #wrapper-project

    = link_to 'ダッシュボードへ戻る',{:controller => 'super',:action => 'dashboard'}, :class => 'btn btn-default btn-prev dashboard'
    = link_to 'プロジェクトの一覧へ',{:controller => 'project',:action => 'list'}, :class => 'btn btn-info btn-prev dashboard'


    .project-edit

      = form_tag '', :class => 'form-horizontal col-lg-11', :role => 'form', :multipart => true

        .form-group
          label.col-sm-2.control-label for="sales"
            'セールス担当者'
            span.text-danger *
          .col-sm-10 = select_tag '',options_from_collection_for_select(@saleses, :id, :name),:name => 'sales',:id => 'sales', :class => 'span3 form-control'


        .form-group
          label.col-sm-2.control-label for="company"
            '企業情報'
            span.text-danger *
          .col-sm-10 = select_tag '',options_from_collection_for_select(@companies, :id, :name),:name => 'company',:id => 'company' ,:class => 'span3 form-control'

        .form-group
          label.col-sm-2.control-label for="table_name"
            'テーブル名'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.table_name, :class => 'form-control', :id => 'table_name',:name => 'table_name', :placeholder => '企業名_プロジェクト名'

        .form-group
          label.col-sm-2.control-label for="name"
            'プロジェクト名'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.name, :class => 'form-control', :id => 'name',:name => 'name', :placeholder => '名前'

        .form-group
          label.col-sm-2.control-label for="url"
            'URL'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.url, :class => 'form-control', :id => 'url',:name => 'url', :placeholder => 'url'

        .form-group
          label.col-sm-2.control-label for="title"
            'タイトル'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.title, :class => 'form-control', :id => 'title',:name => 'title', :placeholder => 'タイトル'

        .form-group
          label.col-sm-2.control-label for="description"
            'ディスクリプション'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.description, :class => 'form-control', :id => 'description',:name => 'description', :placeholder => 'ディスクリプション'

        .form-group
          label.col-sm-2.control-label for="ogp_description"
            'OGPディスクリプション'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.ogp_description, :class => 'form-control', :id => 'ogp_description',:name => 'ogp_description', :placeholder => 'OGPディスクリプション'

        .form-group
          label.col-sm-2.control-label for="keyword"
            'キーワード'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.keyword, :class => 'form-control', :id => 'keyword',:name => 'keyword',:id => 'keyword', :placeholder => 'キーワード'

        .form-group
          label.col-sm-2.control-label for="thanks_title"
            'サンクスメール　タイトル'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.thanks_title, :class => 'form-control', :id => 'thanks_title',:name => 'thanks_title',:id => 'thanks_title', :placeholder => 'サンクスメール タイトル'

        .form-group
          label.col-sm-2.control-label for="thanks_text"
            'サンクスメール　テキスト'
            span.text-danger *
          .col-sm-10 = text_area_tag '', @project.thanks_text, :class => 'form-control', :id => 'thanks_text',:name => 'thanks_text',:id => 'thanks_text', :placeholder => 'サンクスメール テキスト',:size => "10x10"

        .form-group
          label.col-sm-2.control-label for="mail_title"
            '先方メール　タイトル'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.mail_title, :class => 'form-control', :id => 'mail_title',:name => 'mail_title',:id => 'mail_title', :placeholder => '先方メール タイトル'

        .form-group
          label.col-sm-2.control-label for="mail_text"
            '先方メール　テキスト'
            span.text-danger *
          .col-sm-10 = text_area_tag '', @project.mail_text, :class => 'form-control', :id => 'mail_text',:name => 'mail_text',:id => 'mail_text', :placeholder => '先方メール テキスト',:size => "10x10"

        .form-group
          label.col-sm-2.control-label for="personal_info"
            '個人情報保護の文面'
            span.text-danger *
          .col-sm-10 = text_area_tag '', @project.personal_info, :class => 'form-control', :id => 'personal_info',:name => 'personal_info',:id => 'personal_info', :placeholder => '個人情報保護の文面',:size => "10x10"

        .form-group
          label.col-sm-2.control-label for="start_at"
            '開始時間'
            span.text-danger *
          .input-group.date.datepicker4.col-sm-10
            = text_field_tag('', @project.start_at,  :class => 'form-control',:name => 'start_at',:id => 'start_at', :placeholder => 'YYYY/MM/DD hh:mm:ss')
            span.input-group-addon
              span.fa.fa-calendar

        .form-group
          label.col-sm-2.control-label for="finish_at"
            '終了時間'
            span.text-danger *
          .input-group.date.datepicker4.col-sm-10.col-sm-10
            = text_field_tag('', @project.finish_at,  :class => 'form-control',:name => 'finish_at',:id => 'finish_at', :placeholder => 'YYYY/MM/DD hh:mm:ss')
            span.input-group-addon
              span.fa.fa-calendar

        .form-group
          label.col-sm-2.control-label for="domain_name"
            'ドメイン名'
            span.text-danger *
          .col-sm-10 = text_field_tag '', @project.domain_name,:class => 'form-control', :id => 'domain_name',:name => 'domain_name',:id => 'domain_name', :placeholder => 'ドメイン名'

        .form-group
          label.col-sm-2.control-label for="domain_name"
            'ドメイン期限'
            span.text-danger *
          .col-sm-10.input-group.date.datepicker4
            = text_field_tag('', @project.domain_deadline_at,  :class => 'form-control',:name => 'deadline_at',:id => 'domain_deadline_at', :placeholder => 'YYYY/MM/DD hh:mm:ss')
            span.input-group-addon
              span.fa.fa-calendar

        .form-group
          label.col-sm-2.control-label for="ssl_deadline_at"
            'SSL期限'
            span.text-danger *
          .col-sm-10.input-group.date.datepicker4
            = text_field_tag('', @project.ssl_deadline_at,  :class => 'form-control datepicker',:name => 'ssl_deadline_at',:id => 'ssl_deadline_at', :placeholder => 'YYYY/MM/DD hh:mm:ss')
            span.input-group-addon
              span.fa.fa-calendar


        .form-group
          table.table.table-striped.table-bordered.table-hover#task-list.col-sm-8
            thead
              tr
                th 担当者
                th タスク名
                th 詳細
            tbody.task-data

          .btn.btn-danger#task-add タスク追加



        .submit
          .project-edit-submit.btn.btn-primary 保存
